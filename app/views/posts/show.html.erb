<p id="notice"><%= notice %></p>
<div class="container">

      <div class="row">
        <div class="col-md-12">
          <h1><%= @post.title %></h1>
          <h4><%= @post.date %></h4>
        </div>
        <div class="col-md-12" id="blog-img">
          <%= image_tag(@post.image_url, class: "img-responsive") %>
        </div>
        <div class="col-md-11"> 
          <%= @post.body %>
        </div>
        <div class="col-md-12">
			<%= link_to 'Back', posts_path, :class => "btn btn-xs btn-info" %> 
      <% if signed_in? && current_user.admin? %>  
        <%= link_to 'Edit', edit_post_path(@post),
          :class => "btn btn-xs btn-warning" %> 
        <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-xs btn-danger"  %>
      <% end %>
      
        </div>
        <div class="col-md-12">
        <%= render :partial => '/posts/comment' %>
        <%= render :partial => '/posts/new_comment' %>
        </div>
      </div>
</div>